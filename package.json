{
  "name": "easy-soap",
  "version": "1.0.0",
  "description": "Basice web based EMR built with MERN stack",
  "main": "server.js",
  "engines": {
    "node": "v17.2.0"
  },
  "scripts": {
    "server": "nodemon server",
    "client": "npm start --prefix ./client/",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "concurrently --kill-others-on-fail \"node server.js\" \"npm run client\""
  },
  "author": "Seth Frutiger",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.0.0",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.8",
    "serve": "^13.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
